# Docker Environment Configuration
# Copy this file to .env when running with docker-compose

# Django Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (PostgreSQL via Docker)
DATABASE_URL=postgresql://redib_user:redib_password@db:5432/redib_db

# Redis (via Docker)
USE_REDIS=True
REDIS_URL=redis://redis:6379/0

# Celery (via Docker Redis)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration (console backend for testing)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Sentry (optional - leave empty to disable)
SENTRY_DSN=

# Security (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
