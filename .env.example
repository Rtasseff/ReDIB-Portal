# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Local development (SQLite - no setup required):
DATABASE_URL=sqlite:///db.sqlite3
# Production (PostgreSQL - recommended):
# DATABASE_URL=postgresql://redib_user:redib_password@localhost:5432/redib_db
# Docker (PostgreSQL):
# DATABASE_URL=postgresql://redib_user:redib_password@db:5432/redib_db

# Redis (set USE_REDIS=True when Redis is available, False for local dev without Redis)
USE_REDIS=False
# Local development with Redis:
REDIS_URL=redis://localhost:6379/0
# Docker:
# REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.ionos.es
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@redib.net
EMAIL_HOST_PASSWORD=your-email-password

# Celery (requires Redis - only needed for background tasks and email automation)
# Local development with Redis:
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# Docker:
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# Sentry (optional)
SENTRY_DSN=

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
